<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/preview">
	<Resource name="jdbc/preview" driverClassName="com.mysql.jdbc.Driver" type="javax.sql.DataSource"
		      factory="org.apache.tomcat.jdbc.pool.DataSourceFactory" 
		      logAbandoned="true" maxActive="100" maxIdle="30" maxWait="50000"
			  removeAbandoned="true" removeAbandonedTimeout="90" scope="Container"
		      testWhileIdle="true" timeBetweenEvictionRunsMillis="50000"
		      url="jdbc:mysql://localhost:3306/preview"
		      username="preview" password="preview"  validationQuery="select 1" />
</Context>
